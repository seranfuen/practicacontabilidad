@{
    ViewData["Title"] = "AddJournalEntry";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Añadir asientos</h2>

<div ng-controller="LedgerEntryController">
    <div class="row">
        <button ng-click="addNewLine()" class="btn btn-primary btn-sm">Añadir apunte</button>
    </div>
    <div class="row">
        <table class="table table-bordered table-striped table-sm">
            <thead>
            <tr>
                <td>Cuenta</td>
                <td>Debe</td>
                <td>Haber</td>
                <td>Referencia</td>
            </tr>
            </thead>
            <tbody>
            <tr ng-repeat="line in Lines">
                <td>
                    <input type="text" ng-model="line.Account" ng-blur="fillAccount($index)"/>
                </td>
                <td>
                    <input type="text" ng-model="line.Debit" ng-change="updateTotals()"/>
                </td>
                <td>
                    <input type="text" ng-model="line.Credit" ng-change="updateTotals()"/>
                </td>
                <td>
                    <input type="text" ng-model="line.Remarks"/>
                </td>
            </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td></td>
                    <td>{{TotalsLine.DebitSum}}</td>
                    <td>{{TotalsLine.CreditSum}}</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>