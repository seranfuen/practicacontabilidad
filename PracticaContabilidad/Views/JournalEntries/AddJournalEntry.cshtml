@{
    ViewData["Title"] = "AddJournalEntry";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Añadir asientos</h2>

<div ng-controller="LedgerEntryController">
    <div class="row mb-4">
        <div class="col-sm">
            <button ng-click="addNewLine()" class="btn btn-primary btn-sm">Añadir apunte</button>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-10">
            <table class="table table-striped table-sm table-responsive">
                <thead>
                <tr>
                    <td>Código</td>
                    <td style="min-width: 150px">Nombre</td>
                    <td>Debe</td>
                    <td>Haber</td>
                    <td>Referencia</td>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="line in Lines">
                    <td>
                        <input type="text" size="10" ng-model="line.Account" ng-class="AccountClass[$index]" ng-blur="fillAccount($index)"/>

                    </td>
                    <td>{{AccountName[$index]}}</td>
                    <td>
                        <input type="text" size="10" ng-model="line.Debit" ng-change="updateTotals()"/>
                    </td>
                    <td>
                        <input type="text" size="10" ng-model="line.Credit" ng-change="updateTotals()"/>
                    </td>
                    <td>
                        <input type="text" size="40" ng-model="line.Remarks"/>
                    </td>
                </tr>
                </tbody>
                <tfoot>
                <tr>
                    <td></td>
                    <td></td>
                    <td>{{TotalsLine.DebitSum}}</td>
                    <td>{{TotalsLine.CreditSum}}</td>
                    <td></td>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>