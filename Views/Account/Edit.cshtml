@using PracticaContabilidad.Model
@model PracticaContabilidad.Model.Account

@{
    ViewData["Title"] = "Create/Edit Account";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Edit</h2>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccountId" value="@Model.AccountId"/>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                @if (Model.AccountId > 0)
                {
                    <span>@Model.Code</span>
                    <input type="hidden" asp-for="Code" value="@Model.Code"/>
                }
                else
                {
                    <input asp-for="Code" class="form-control"/>
                    <span asp-validation-for="Code" class="text-danger"></span>
                }
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountType" class="control-label"></label>
                <select asp-for="AccountType" asp-items="Html.GetEnumSelectList<AccountType>()"></select>
                <span asp-validation-for="AccountType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

