@model IEnumerable<PracticaContabilidad.Model.Account>
@{
    ViewData["Title"] = "Accounts";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Accounts</h2>
<table class="table table-striped table-responsive-sm">
    <thead>
    <tr>
        <th>Code</th><th>Name</th><th>Description</th><th>Debit</th><th>Credit</th><th>Balance</th><th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var account in Model)
    {
        <tr>
            <td>@account.Code</td>
            <td>@account.Name</td>
            <td>@account.Description</td>
            <td>
                @($"{account.Debit:n2} €")
            </td>
            <td>
                @($"{account.Credit:n2} €")
            </td>
            <td>
                @($"{account.Balance:n2} €")
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-accountId="@account.AccountId">Edit</a>
            </td>
        </tr>
    }
    <tr>
        <td colspan="3"></td>
        <td>@($"{Model.Sum(acc => acc.Debit):n2} €")</td>
        <td>@($"{Model.Sum(acc => acc.Credit):n2} €")</td>
        <td>@($"{Model.Sum(acc => acc.Balance):n2} €")</td>
    </tr>
    </tbody>

</table>